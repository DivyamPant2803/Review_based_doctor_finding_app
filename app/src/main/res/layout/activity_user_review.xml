<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Rate your doctor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/smile_ratingDoctor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Staff"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/smile_ratingStaff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hygiene"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/smile_ratingCleanliness"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Value for money"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/smile_ratingMoney"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>


    <EditText
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Review Here"
        android:gravity="center_vertical"
        />
    <Button
        android:id="@+id/submitButton"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/colorBox"/>

</LinearLayout>